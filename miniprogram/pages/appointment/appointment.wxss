/* miniprogram/pages/appointment/appointment.wxss */
.main {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 滑动tab */
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  /* overflow: hidden; */
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  text-align: center;
  /* position: fixed;
  top: 0;
  left: 0;
  z-index: 99; */
}

.tab-item {
  padding: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #333;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}


.tab-content {
  margin-top: 20rpx;

  flex: 1;
  height: 95vh;
  background: #fff;
  /* margin-top: 100rpx; */
}

swiper-item {
  overflow: scroll;
}

.item-ans {
  padding: 30rpx;
  padding-bottom: 0;
}

.item-ans image {
  width: 100%;
  height: 350rpx;
}

.flexBox {
  display: flex;
  align-items: center;
}

.left {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: red;
  margin-right: 10rpx;
}

.label {
  color: #bbb;
  font-size: 26rpx;
}

.right {
  padding: 10rpx 20rpx;
  background: #333;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.hasSum {
  font-size: 24rpx;
}

.line {
  width: 100%;
  background: #eee;
  height: 2rpx;
  margin-top: 20rpx;
}
.scoll-h{
  padding-bottom: 30rpx;
}
