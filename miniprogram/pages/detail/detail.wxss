/* miniprogram/pages/detail/detail.wxss */
.item-ans {
  padding: 30rpx;
  background: #fff;
}

.item-ans image {
  width: 100%;
  height: 350rpx;
}

.flexBox {
  display: flex;
}

.left {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: red;
  margin-right: 10rpx;
}

.label {
  color: #bbb;
  font-size: 26rpx;
}


.hasSum {
  font-size: 24rpx;
}

.content {
  background: #fff;
  margin-top: 20rpx;
  font-size: 26rpx;
}

.con_title {
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.con_title text {
  border-left: 5rpx solid #333;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.con_center {
  padding: 30rpx;
  color: #515151;
}
.message {
  margin: 40rpx;
}
.message .tit {
  margin-bottom: 20rpx;
}
.message .tit text {
  color: rgb(184, 180, 180);
  font-size: 24rpx;
}
.message .send {
  display: flex;
}
.message .send input {
  border: 2rpx solid #ccc;
font-size: 24rpx;
width: 500rpx;
height: 60rpx;
line-height: 60rpx;
padding-left: 30rpx;
z-index: 0;

}
.message .list {
  margin: 40rpx 0;
}
.message .list .list-item {
  /* border-bottom: 2rpx solid #ccc; */
  margin: 20rpx 0;
}
.message .list .list-item .tit {
  font-size: 30rpx;
}
.message .list .list-item .tit image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: bottom;
}
.message .list .list-item .tit text {
  font-size: 24rpx;
  color: #ccc;
  float: right;
}
.message .list .list-item .tit text.del {
  margin-left: 10rpx;
}
.message .list .list-item .txt{
   font-size: 26rpx;
   text-indent: 2em;
}
.message .send button {
  width: 120rpx;
  font-size: 28rpx;
  background-color: transparent;
}
.footer {
  padding: 15rpx;
  position: fixed;
  width: 100%;
  background: #fff;
  bottom: 0;
  display: flex;
  box-sizing: border-box;
}

.footer .flex {
  color: #333;
  display: flex;
  width: 120rpx;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}
icon {
  height: 50rpx;
}
.right {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #333;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  flex: 1;
}
