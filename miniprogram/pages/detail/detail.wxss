/* miniprogram/pages/detail/detail.wxss */
.item-ans {
  padding: 30rpx;
  background: #fff;
}

.item-ans image {
  width: 100%;
  height: 350rpx;
}

.flexBox {
  display: flex;
}

.left {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: red;
  margin-right: 10rpx;
}

.label {
  color: #bbb;
  font-size: 26rpx;
}


.hasSum {
  font-size: 24rpx;
}

.content {
  background: #fff;
  margin-top: 20rpx;
  font-size: 26rpx;
}

.con_title {
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.con_title text {
  border-left: 5rpx solid #333;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.con_center {
  padding: 30rpx;
  color: #515151;
}

.footer {
  padding: 15rpx;
  position: fixed;
  width: 100%;
  background: #fff;
  bottom: 0;
  display: flex;
  box-sizing: border-box;
}

.footer .flex {
  color: #333;
  display: flex;
  width: 120rpx;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}
icon {
  height: 50rpx;
}
.right {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #333;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  flex: 1;
}