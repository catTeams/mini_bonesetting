.main {
  color: #333;
  font-size: 26rpx;
  overflow-x: hidden;
  padding-top: 100rpx;
}

.header-search-bar {
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}

.header-search-bar__label {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: #f2f2f2;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  color: #9a9a9a;
}

.proContent {
  padding: 40rpx;
  background: #fff;
  margin: 20rpx 0;
}

.con_title {
  text-align: center;
  font-size: 34rpx;
  margin-bottom: 25rpx;
}

.con_title text {
  color: #c2bfbf;
  display: inline-block;
  margin: 0 30rpx;
}

.con_main {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap
}

.con_main_list {
  width: 47%;
}

.con_main_list image {
  width: 100%;
  height: 250rpx;
}

.con_main_listTit {
  font-size: 34rpx;
}

.con_main_listDetail {
  color: #999;
}

.con_main_listPrice {
  font-size: 28rpx;
  font-weight: 800;
}

.consultingService {
  background: #fff;
}

.service_tit {
  height: 100rpx;
  padding-left: 40rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border-bottom: 2rpx solid #ccc;
}

.service_main_list {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 180rpx;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}

.service_info {
  display: flex;
}

.service_info image {
  width: 100rpx;
  height: 100rpx;
}

.service_name {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  margin-left: 10rpx;
}