/* miniprogram/pages/mine/index.wxss */
.main {
  color: #333;
  font-size: 26rpx;
  overflow-x: hidden;
}
.bg {
  height: 700rpx;
  margin-top: -40%;
  margin-left: -10%;
  position: absolute;
  width: 120%;
  border-radius: 50%;
  background: #333;
  z-index: -1;
}
.logined {
  padding-top: 30rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}
.userImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
  margin-bottom: 20rpx;
}
.box {
  padding: 0 50rpx;
}
.smallBox {
  background: #fff;
  margin-bottom: 30rpx;
}
.firstFlex {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}
.firstFlex view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.firstFlex image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin-bottom: 10rpx;
}