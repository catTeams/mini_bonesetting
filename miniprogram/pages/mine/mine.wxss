/* miniprogram/pages/mine/index.wxss */
.main {
  color: #333;
  font-size: 26rpx;
  overflow-x: hidden;
}



.bg {
  height: 700rpx;
  margin-top: -40%;
  margin-left: -10%;
  position: absolute;
  width: 120%;
  border-radius: 50%;
  background: #333;
  z-index: -1;
}

.logined {
  padding-top: 30rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.userImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
  margin-bottom: 20rpx;
}

.box {
  padding: 0 50rpx;
}

.smallBox {
  background: #fff;
  margin-bottom: 30rpx;
}

.firstFlex {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.firstFlex>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.firstFlex image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin-bottom: 10rpx;
}
.listSum {
  position: absolute;
  right: -3px;
  top: -5rpx;
  background: red;
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

/* 模态框 */
.modal-dialog {
  width: 680rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 50%;
  z-index: 9999;
  background: #fff;
  border-radius: 6rpx;
  transform: translate(-50%, -50%);
  height: 584rpx;
}

.modal-title {
  padding-top: 30rpx;
  text-align: center;
  /* padding-left: 40rpx; */
  font-size: 30rpx;
  color: #030303;
}

.modal-content {
  padding: 25rpx 32rpx;
}

.modal-footer {
  justify-content: space-around;
  display: flex;
  height: 86rpx;
  text-align: center;
}

.btn-cancel {
  color: #666;
  text-align: center;
  font-size: 28rpx;
  width: 182rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 10rpx;
  border: 2rpx solid;
}

.btn-confirm {
  font-size: 28rpx;
  width: 182rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 10rpx;
  color: #fff;
  border: 2rpx solid;
}
.btn-confirm {
  font-size: 28rpx;
  width: 182rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 10rpx;
  color: #fff;
  background: #1460cb !important;
}